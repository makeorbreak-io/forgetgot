<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.forgetgot.selftie.Homepage">

    <ImageButton
        android:id="@+id/mainAddBtn"
        android:layout_width="69dp"
        android:layout_height="0dp"
        android:background="#00000000"
        app:srcCompat="@drawable/add_button1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="59dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainArchive"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mainPlayBtn"
        android:layout_marginLeft="59dp" />

    <ImageButton
        android:id="@+id/mainPlayBtn"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:background="#00000000"
        android:elevation="0dp"
        app:srcCompat="@drawable/play_button"
        app:layout_constraintRight_toLeftOf="@+id/mainArchive"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="81dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/mainAddBtn"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="41dp" />

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout4"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/mainStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status : "
            android:textSize="30sp" />

        <EditText
            android:id="@+id/mainData"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Data"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/mainArchive"
        android:layout_marginTop="171dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mainCategory"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:text="Category : "
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/mainSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/mainArchive"
        android:layout_width="74dp"
        android:layout_height="0dp"
        android:background="#00000000"
        app:srcCompat="@drawable/archive_button"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/mainPlayBtn"
        android:layout_marginEnd="31dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mainPlayBtn"
        android:layout_marginRight="31dp" />


</android.support.constraint.ConstraintLayout>
